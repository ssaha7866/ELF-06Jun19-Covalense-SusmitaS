	<!-- by type => id should be same as variable name in Department bean class -->
	<bean id="employee"
		class="com.covalense.springcore.beans.EmployeeBean4" autowire="byType">
		<property name="name" value="Adam"></property>
		<property name="id" value="101"></property>

	</bean>

	<bean id="departmentBean"
		class="com.covalense.springcore.beans.DepartmentBean">
		<property name="deptId" value="201"></property>
		<property name="deptName" value="IT"></property>

	</bean>

</beans>